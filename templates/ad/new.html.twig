{% extends 'base.html.twig' %}

{% block title %}Create a new ad{% endblock %}

{% form_theme form 'ad/_collection.html.twig' %}

{% block body %}

  <div class="container">
    <h1 class="my-5">Create a new ad !</h1>

    {{ form_start(form) }}

    <div class="row">
      <div class="col">
        <div class="alert alert-light">
          <h2>General informations</h2>
          <hr>
          {{ form_row(form.title) }}
          {{ form_row(form.price) }}
          {{ form_row(form.rooms) }}
        </div>
        <div class="alert alert-light">
          <h2>Details</h2>
          <hr>
          {{ form_row(form.introduction) }}
          {{ form_row(form.content) }}
        </div>
      </div>
      <div class="col">
        <div class="alert alert-light">
          <h2>Images</h2>
          <hr>
          {{ form_row(form.coverImage) }}
          {{ form_row(form.images) }}
        </div>
      </div>
    </div>

    <div class="alert alert-success">
      <p>You're about to post a new ad ! Thanks a lot :D</p>
      <button type="submit" class="btn btn-primary">
        <i class="fas fa-check mr-2"></i>
        Create new ad
      </button>
    </div>

    {{ form_end(form) }}

  </div>

{% endblock %}

{% block javascripts %}

<script src="/js/ad.js"></script>

{% endblock %}