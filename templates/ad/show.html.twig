{% extends 'base.html.twig' %}

{% block title %}
  {{ ad.title }}
{% endblock %}

{% block body %}

<div class="ad-title" style="background-image: url({{ ad.coverImage }})">
  <div class="container">
    <h1>{{ ad.title }}</h1>
    <p>{{ ad.introduction }}</p>
    <p class="h2">
      <strong>{{ ad.rooms }} rooms</strong> for <strong>{{ ad.price }}</strong> per night
    </p>
    <a href="#" class="btn btn-primary">Book me !</a>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8 mb-3">
      {{ ad.content | raw}}

      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
        {% for image in ad.images %}         
          <li data-target="#carouselExampleIndicators" data-slide-to="{{ loop.index0 }}" class="{% if loop.first %}active{% endif %}"></li>
        {% endfor %}
        </ol>
        <div class="carousel-inner">
          {% for image in ad.images %}           
            <div class="carousel-item {% if loop.first %}active{% endif %}">
              <img class="d-block w-100" src="{{ image.url }}" alt="First slide">
              <div class="carousel-caption d-none d-md-block">
                <h5>{{ ad.title }}</h5>
                <p>{{ image.caption }}</p>
              </div>
            </div>      
          {% endfor %}
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <div class="col">
    {% set author = ad.author %}
      <div class="row mb-3 align-items-center">
        <div class="col-3">
          <img src="{{ author.avatar }}" alt="{{ author.fullName }}'s avatar" class="avatar avatar-medium">
        </div>
        <div class="col">
          <h3>{{ author.fullName }}</h3>
          <span class="badge badge-secondary">{{ author.ads | length }} ads</span>
        </div>
      </div>
      {{ author.description | raw }}
    </div>
  </div>
</div>

{% endblock %}