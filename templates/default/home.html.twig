{% extends 'base.html.twig' %}

{% block title %}
  Welcome to FakeBNB ! Best place to get a flat for your next trip :D
{% endblock %}

{% block body %}
<div class="container">
  <div class="jumbotron mt-4">
    <h1 class="display-3">Welcome to FakeBNB !</h1>
    <p class="lead">Lorem ipsum dolor sit amet consectetur adipisicing elit. Quis at harum, dolorum tenetur quia ut temporibus odio, nisi, eos nihil enim provident vel exercitationem iure esse ea consectetur molestias culpa.</p>
    <hr class="my-4">
    <p>Lorem ipsum dolor, sit amet consectetur adipisicing elit. Dolorem numquam eius harum expedita excepturi esse ?</p>
    <p class="lead">
      <a class="btn btn-primary btn-lg" href="{{ path('ads_index') }}" role="button">Check our ads</a>
    </p>
  </div>

  <h2 class="h1 my-5">Our best flats !</h2>
  <div class="row">
    {% for data in ads %}
      {% include 'ad/_ad.html.twig' with {'ad': data.ad} %}
    {% endfor %}
  </div>

  <h2 class="h1 my-4">Our best hosts !</h2>
  <div class="row">
  {% for data in users %}
  {% set user = data.user %}
    <div class="col">
      <div class="card border-primary mb-3">
        <div class="card-body">
          <h4 class="card-title">
            {{ user.fullName }}
          </h4>

          <hr>

          <div class="card-text">
            <img src="{{ user.avatar }}" alt="{{ user.fullName }}'s avatar" class="float-left mr-3 avatar">
            <p>{{ user.introduction }}</p>
            <a href="{{ path('user_show', {'slug': user.slug}) }}" class="btn btn-success float-right">Learn more !</a>
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
  </div>
</div>
{% endblock %}