{% extends 'admin/base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Admin Dashboard</h1>
        <div class="row">
            <div class="col">
                <div class="card bg-primary text-light mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-users fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{ stats.users }} users</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-dark text-light mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-hotel fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{ stats.ads }} ads</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-danger text-light mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-folder fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{ stats.bookings }} bookings</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card bg-info text-light mb-3 text-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-comments fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h4 class="card-title">{{ stats.comments }} comments</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>      
        </div>

        <hr>

        <div class="row">
            <div class="col">
                <div class="alert alert-success text-primary">
                    <h2 class="alert-heading my-3"><i class="fas fa-arrow-up"></i> Best ads</h2>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Ad</th>
                                <th>Host</th>
                                <th>Rating</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ad in bestAds %}
                            <tr>
                                <td>{{ ad.title }}</td>
                                <td>
                                    <img src="{{ ad.avatar }}" alt="{{ ad.firstName }} {{ ad.lastName }}'s avatar" class="avatar avatar-mini"> {{ ad.firstName }} {{ ad.lastName }}
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-primary">
                                        {{ ad.rating|number_format(1, ',', ' ') }}
                                    </span>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col">
                <div class="alert alert-danger text-light">
                    <h2 class="alert-heading my-3"><i class="fas fa-arrow-down"></i> Worst ads</h2>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Ad</th>
                                <th>Host</th>
                                <th>Rating</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ad in worstAds %}
                            <tr>
                                <td>{{ ad.title }}</td>
                                <td>
                                    <img src="{{ ad.avatar }}" alt="{{ ad.firstName }} {{ ad.lastName }}'s avatar" class="avatar avatar-mini"> {{ ad.firstName }} {{ ad.lastName }}
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-primary">
                                        {{ ad.rating|number_format(1, ',', ' ') }}
                                    </span>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
